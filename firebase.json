{
  "hosting": {
    "public": "public",
    "ignore": [
      ".git",
      ".gitignore",
      "*.yaml",
      "*.go",
      "*.tpl",
      "*.sh"
    ],
    "headers": [
      {
        "source": "/",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=63072000; includeSubDomains; preload"
          },
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "Referrer-Policy",
            "value": "no-referrer"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src https: data: blob:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; script-src https: 'self' 'unsafe-inline';"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Strict-Transport-Security",
            "value": "max-age=63072000; includeSubDomains; preload"
          },
          {
            "key": "X-Frame-Options",
            "value": "SAMEORIGIN"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          },
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "Referrer-Policy",
            "value": "no-referrer"
          },
          {
            "key": "Content-Security-Policy",
            "value": "default-src https: data: blob:; style-src 'self' 'unsafe-inline'; font-src 'self' data:; script-src https: 'self' 'unsafe-inline';"
          }
        ]
      }
    ]
  }
}
